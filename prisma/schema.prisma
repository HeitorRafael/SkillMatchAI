// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  // output   = "../app/generated/prisma" // Optional: Adjust output path if needed
}

// -- MODELS FOR NEXT-AUTH --

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// -- APPLICATION MODELS --

model User {
  id              String    @id @default(cuid())
  name            String?
  email           String?   @unique
  emailVerified   DateTime?
  image           String?
  phone           String?
  password        String?   // bcrypt hash
  apiKeyEncrypted String?   @map("api_key_encrypted")

  resumeUrl       String?   @map("resume_url")
  description     String?   @db.Text
  skills          String[]  // Array of skills

  // Subscription fields
  subscriptionTier      SubscriptionTier @default(FREE)
  subscriptionStatus    SubscriptionStatus @default(ACTIVE)
  subscriptionStartDate DateTime?
  subscriptionEndDate   DateTime?

  // Analysis limits
  analysisCount         Int       @default(0)
  lastAnalysis          DateTime?
  monthlyAnalysisCount  Int       @default(0) // Reset every month
  lastMonthlyReset      DateTime? @default(now())

  accounts        Account[]
  sessions        Session[]
  analyses        Analysis[]
  userJobs        UserJob[]
  payments        Payment[]
  donations       Donation[]

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("users")
}

model Analysis {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])

  resumeUrl   String
  description String   @db.Text

  aiInsights  Json     // AI insights
  jobMatches  Job[]

  createdAt   DateTime @default(now())

  @@map("analyses")
}

model Job {
  id              String   @id @default(cuid())
  analysisId      String
  analysis        Analysis @relation(fields: [analysisId], references: [id])

  title           String
  company         String
  location        String?
  remoteType      RemoteType
  salaryRange     String?
  description     String   @db.Text
  requirements    String[] // Array of requirements
  url             String

  compatibilityScore Int   // 0-100
  matchType       MatchType // EXACT, PROFILE, RECOMMENDED, etc
  aiRecommendation String  @db.Text

  userJobs        UserJob[]

  createdAt       DateTime @default(now())

  @@map("jobs")
}

model UserJob {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  jobId       String
  job         Job      @relation(fields: [jobId], references: [id])

  status      ApplicationStatus @default(SAVED)
  appliedAt   DateTime?
  notes       String?  @db.Text

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@unique([userId, jobId])
  @@map("user_jobs")
}

// -- PAYMENT MODELS --

model Payment {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id])

  amount          Float    // Valor em reais
  currency        String   @default("BRL")
  status          PaymentStatus @default(PENDING)

  // PIX data
  pixKey          String?  // Chave PIX usada
  pixQRCode       String?  @db.Text // QR Code em base64
  pixCopyPaste    String?  @db.Text // Código copia e cola
  pixTxId         String?  @unique // Transaction ID do PIX

  subscriptionTier SubscriptionTier // Plano adquirido

  // Webhook validation
  webhookReceived  Boolean  @default(false)
  webhookData      Json?    // Dados do webhook

  paidAt           DateTime?
  expiresAt        DateTime? // QR Code expiration

  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@map("payments")
}

model Donation {
  id              String   @id @default(cuid())
  userId          String?
  user            User?    @relation(fields: [userId], references: [id])

  email           String?  // Email do doador (se não autenticado)
  amount          Float
  currency        String   @default("BRL")
  status          PaymentStatus @default(PENDING)

  pixKey          String?
  pixQRCode       String?  @db.Text
  pixCopyPaste    String?  @db.Text
  pixTxId         String?  @unique

  message         String?  @db.Text // Mensagem do doador (opcional)

  paidAt          DateTime?
  createdAt       DateTime @default(now())

  @@map("donations")
}

// -- ENUMS --

enum SubscriptionTier {
  FREE       // 1 análise por mês
  BASIC      // R$ 10/mês - 1 análise por semana
  PREMIUM    // R$ 20/mês - Análises ilimitadas
  ENTERPRISE // Legado - será migrado para PREMIUM
}

enum SubscriptionStatus {
  ACTIVE
  EXPIRED
  CANCELLED
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  EXPIRED
}

enum RemoteType {
  REMOTE
  HYBRID
  ONSITE
}

enum MatchType {
  EXACT_MATCH
  PROFILE_MATCH
  RECOMMENDED
  HIGH_SALARY
  NEARBY
}

enum ApplicationStatus {
  SAVED
  APPLIED
  INTERVIEWING
  REJECTED
  ACCEPTED
}
