// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  // output   = "../app/generated/prisma" // Optional: Adjust output path if needed
}

// -- MODELS FOR NEXT-AUTH --

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// -- APPLICATION MODELS --

model User {
  id              String    @id @default(cuid())
  name            String?
  email           String?   @unique
  emailVerified   DateTime?
  image           String?
  phone           String?
  password        String?   // bcrypt hash
  apiKeyEncrypted String?   @map("api_key_encrypted")

  resumeUrl       String?   @map("resume_url")
  description     String?   @db.Text
  skills          String[]  // Array of skills

  subscription    SubscriptionTier @default(FREE)
  analysisCount   Int              @default(0)
  lastAnalysis    DateTime?

  accounts        Account[]
  sessions        Session[]
  analyses        Analysis[]
  userJobs        UserJob[]

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@map("users")
}

model Analysis {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])

  resumeUrl   String
  description String   @db.Text

  aiInsights  Json     // AI insights
  jobMatches  Job[]

  createdAt   DateTime @default(now())

  @@map("analyses")
}

model Job {
  id              String   @id @default(cuid())
  analysisId      String
  analysis        Analysis @relation(fields: [analysisId], references: [id])

  title           String
  company         String
  location        String?
  remoteType      RemoteType
  salaryRange     String?
  description     String   @db.Text
  requirements    String[] // Array of requirements
  url             String

  compatibilityScore Int   // 0-100
  matchType       MatchType // EXACT, PROFILE, RECOMMENDED, etc
  aiRecommendation String  @db.Text

  userJobs        UserJob[]

  createdAt       DateTime @default(now())

  @@map("jobs")
}

model UserJob {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  jobId       String
  job         Job      @relation(fields: [jobId], references: [id])

  status      ApplicationStatus @default(SAVED)
  appliedAt   DateTime?
  notes       String?  @db.Text

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@unique([userId, jobId])
  @@map("user_jobs")
}

// -- ENUMS --

enum SubscriptionTier {
  FREE
  PREMIUM
  ENTERPRISE
}

enum RemoteType {
  REMOTE
  HYBRID
  ONSITE
}

enum MatchType {
  EXACT_MATCH
  PROFILE_MATCH
  RECOMMENDED
  HIGH_SALARY
  NEARBY
}

enum ApplicationStatus {
  SAVED
  APPLIED
  INTERVIEWING
  REJECTED
  ACCEPTED
}
